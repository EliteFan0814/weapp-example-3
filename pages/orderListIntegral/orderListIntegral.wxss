/* pages/order/order.wxss */
.container {
  background-color: #f5f5f5;
}

.container .van-tabs__line {
  background-color: #0ccd79;
}


.container .scroll {
  height: calc(100vh - 246rpx);
}

.container .order-list .order-item {
  background-color: #fff;
  padding: 20rpx 30rpx 25rpx;
  border-radius: 15rpx;
  margin-top: 25rpx;
}

.container .order-list .order-item:nth-child(n + 2) {
  margin-top: 15rpx;
}

.container .order-list .order-item .title {
  padding-bottom: 20rpx;
  margin-bottom: 15rpx;
  justify-content: space-between;
  font-size: 22rpx;
  color: #999999;
  border-bottom: 1px solid #eee;
}
.container .order-list .order-item .time-wrap {
  color: #0ccd79;
}
.container .order-list .order-item .time-wrap .item {
  background: #0ccd79;
  color: #fff;
  font-size: 20rpx;
  padding: 0rpx 2rpx;
  border-radius: 12rpx;
}
.container .order-list .order-item .title .red {
  font-size: 28rpx;
  color: #0ccd79;
  opacity: 0.97;
  margin-left: 20rpx;
}

.container .order-list .order-item .title .info {
  color: #999;
}

.container .order-list .order-item .info {
  color: #999;
  padding-bottom: 20rpx;
}

.container .order-list .order-item .info .goods-list .goods-item {
  align-items: stretch;
  margin-bottom: 20rpx;
}

.container .order-list .order-item .info .goods-list .goods-item .good-img {
  width: 150rpx;
  height: 150rpx;
}

.container .order-list .order-item .info .goods-list .goods-item .right-info {
  flex-grow: 1;
  justify-content: space-between;
  align-items: flex-start;
  font-size: 28rpx;
  display: flex;
  flex-direction: column;
  margin-left: 25rpx;
  color: #000104;
  width: 450rpx;
}

.container
  .order-list
  .order-item
  .info
  .goods-list
  .goods-item
  .right-info
  .name {
  font-weight: bold;
}


.container
  .order-list
  .order-item
  .info
  .goods-list
  .goods-item
  .right-info
  .spec {
  color: #888888;
  margin: 10rpx 0;
  font-size: 24rpx;
}

.container
  .order-list
  .order-item
  .info
  .goods-list
  .goods-item
  .right-info
  .price {
  width: 100%;
  justify-content: space-between;
  color: #0ccd79;
}

.container
  .order-list
  .order-item
  .info
  .goods-list
  .goods-item
  .right-info
  .price
  .pre-price {
  font-size: 18rpx;
  color: #999;
  text-decoration: line-through;
}

.container
  .order-list
  .order-item
  .info
  .goods-list
  .goods-item
  .right-info
  .price
  .number {
  color: #999999;
}

.container
  .order-list
  .order-item
  .info
  .goods-list
  .goods-item
  .right-info
  .details {
  width: 100%;
  text-align: right;
  color: #ff9c5a;
  font-size: 20rpx;
  margin-top: 5rpx;
}

.container .order-list .order-item .info .more-btn {
  justify-content: center;
  border-top: 1px solid #eeeeee;
}

.container .order-list .order-item .info .more-btn .icon {
  width: 14rpx;
  margin-left: 5rpx;
  vertical-align: middle;
}

.container .order-list .order-item .info .total {
  justify-content: flex-end;
}
.container .order-list .order-item .info .total .coupon{
  font-size: 24rpx;
  color: #999;
  margin-right: 20rpx;
}

.container .order-list .order-item .info .total .right {
  font-size: 28rpx;
  color: #333;
  font-weight: bolder;
}

.container .order-list .order-item .info .total .right .word {
  font-weight: normal;
  color: #666;
}

.container .order-list .order-item .info .refund {
  font-size: 22rpx;
  color: #0ccd79;
  text-align: right;
  margin-top: 3rpx;
}

.container .order-list .order-item .btn-wrap {
  justify-content: flex-end;
}
.container .order-list .order-item .btn-wrap .serve-btn{
  line-height: normal;
  width: auto;
  font-weight: normal;
  margin-right: 0;
}

.container .order-list .order-item .btn-wrap .btn {
  margin-left: 10rpx;
  font-size: 24rpx;
  line-height: 24rpx;
  background-color: #fff;
  padding: 10rpx 20rpx;
  border-radius: 26.99rpx;
}
