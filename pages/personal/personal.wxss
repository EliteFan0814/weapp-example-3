/* pages/personal/personal.wxss */
.container {
  background-color: #f5f5f5;
}

.container .user-info {
  position: relative;
}

.container .user-info .bg-img {
  width: 100%;
  display: block;
}

.container .user-info .info-wrap {
  position: absolute;
  bottom: 80rpx;
  box-sizing: border-box;
  width: 100%;
  padding: 0 50rpx;
}

.container .order-list-wrap {
  position: relative;
  margin-top: -60rpx;
  margin-bottom: 20rpx;
  background-color: #fff;
  border-radius: 15rpx;
  padding: 30rpx 20rpx;
}

.container .chip-wrap {
  margin-bottom: 20rpx;
}

.container .exchange-wrap {
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.container .exchange-wrap .exchange-item {
  width: 48%;
  position: relative;
}

.container .exchange-wrap .exchange-item .bg-img {
  width: 100%;
  height: 160rpx;
  display: block;
}

.container .exchange-wrap .exchange-item .name {
  white-space: nowrap;
  font-size: 30rpx;
  letter-spacing: 0rpx;
  color: #ffffff;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
}
