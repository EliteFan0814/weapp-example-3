.container {
  background: #f5f5f5;
}

.container .rich-img {
  width: 100% !important;
}

.container .promise {
  border-top: 1px solid #f2f2f2;
  justify-content: space-between;
  background: #fff;
  margin: 20rpx 0;
  padding: 35rpx 30rpx;
}

.container .promise .left {
  font-size: 28rpx;
  color: #999999;
}

.container .promise .left .fold {
  margin-right: 20rpx;
  color: #4d4d4d;
}

.swiper-wrap swiper {
  height: 500rpx;
}

.swiper-wrap .swiper-item,
.swiper-item image {
  width: 100%;
  height: 100%;
}

.product-main {
  background: white;
  padding: 25rpx 30rpx;
}

.product-title {
  font-size: 36rpx;
  line-height: 1.5;
}

.product-price {
  margin-top: 15rpx;
  display: flex;
  align-items: center;
}

.product-price--red {
  font-size: 30rpx;
  color: #0ccd79;
}

.product-price--sm {
  margin-left: 20rpx;
  font-size: 22rpx;
  color: #999;
  text-decoration: line-through;
}

.product-count {
  margin-top: 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 22rpx;
  color: #999;
}

.operation-h {
  height: 100rpx;
}

.operation-wrap {
  position: fixed;
  bottom: 0;
  box-shadow: 0px -2px 5px 0px rgba(82, 82, 82, 0.1);
  background: white;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  padding: 0 60rpx;
  box-sizing: border-box;
  color: white;
  text-align: center;
  font-size: 28rpx;
  background: #0ccd79;
}

.disabled {
  background: #999;
}

.detail-wrap {
  padding: 20rpx 30rpx 30rpx;
  position: relative;
}

.detail-wrap .good-wrap {
  align-items: inherit;
  margin-bottom: 20rpx;
}

.detail-wrap .good-wrap .spec-img {
  width: 160rpx;
  height: 160rpx;
  border-radius: 10rpx;
  margin-right: 10rpx;
}

.detail-wrap .good-wrap .right-text {
  flex: 1;
}

.detail-wrap .good-wrap .right-text .name {
  margin-bottom: 20rpx;
  margin-right:40rpx;
}

.detail-wrap .spec-wrap .item-wrap .spec-name {
  font-size: 30rpx;
  margin: 20rpx 0;
}

.detail-wrap .spec-wrap .item-wrap .spec-list {
  flex-wrap: wrap;
  padding-top: 20rpx;
}

.detail-wrap .spec-wrap .item-wrap .spec-list .spec-item {
  color: #fff;
  width: 140rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  background-color: #b8b8b8;
  border-radius: 10rpx;
  margin: 0 10rpx 20rpx;
  box-sizing: border-box;
}

.detail-wrap .spec-wrap .item-wrap .spec-list .active-item {
  background: rgba(251, 96, 46, 0.3);
  border: 1rpx solid #fb6f41;
  color: #9c3717;
}

.detail-wrap .buy-num {
  justify-content: space-between;
  font-size: 30rpx;
  margin: 20rpx 0 30rpx;
}

.detail-wrap .btn-wrap {
  justify-content: center;
}

.detail-wrap .btn-wrap .btn {
  width: 600rpx;
  height: 72rpx;
  line-height: 72rpx;
  text-align: center;
  color: #fff;
  font-size: 24rpx;
  border-radius: 40rpx;
}

.detail-wrap .btn-wrap .buy {
  background: #0ccd79;
}
