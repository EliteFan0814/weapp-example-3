.container {
  background-color: #f5f5f5;
}
.confirm-order {
  padding-bottom: 130rpx;
}
.address-wrap {
  margin: 20rpx 30rpx;
}
.address-wrap .address {
  background-color: #fff;
  border-radius: 17rpx;
  padding: 20rpx 15rpx;
  justify-content: space-between;
}
.address .left {
  width: 95%;
}
.address .left .text {
  flex: 1;
  align-items: flex-start;
}
.address .left image {
  width: 30rpx;
  height: 30rpx;
  margin-right: 40rpx;
}
.goods-wrap {
  background-color: #fff;
  padding: 15rpx;
  border-radius: 15rpx;
  margin-bottom: 20rpx;
}
.goods-wrap .item-content {
  align-items: stretch;
  margin-bottom: 20rpx;
}
.item-content .good-img {
  margin-right: 15rpx;
  width: 150rpx;
  height: 150rpx;
  border-radius: 18.12rpx;
}
.item-content .right-info {
  flex: 1;
  font-size: 28rpx;
  font-weight: bolder;
}
.button-h {
  height: 88rpx;
}
.btm-btn {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
}
.btm-btn .btn-style {
  transition: all 0.3s;
  box-shadow: 0px -2px 5px 0px rgba(82, 82, 82, 0.3);
  background: white;
  width: 100%;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
  color: white;
  font-size: 30rpx;
  background-color: #0bc373;
  border-radius: 0;
}
.base-btn:active {
  background-color: #11af6a;
}
.price-fragment {
  background-color: #fff;
  padding: 20rpx;
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  border-radius: 15rpx;
}
.fragment-item {
  display: flex;
  align-items: center;
  margin-left: 20rpx;
}
.fragment-item image {
  width: 33rpx;
  height: 34rpx;
  margin-right: 5rpx;
}
