.container {
  background-color: #f5f5f5;
}

.container .omit-1 {
  width: 100rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  -o-text-overflow: ellipsis;
  overflow: hidden;
}

.container .omit-2 {
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.container .rich-img {
  width: 100%;
}

.container .red {
  font-size: 34.72rpx;
  color: #fe2448;
}

.container .grey {
  margin-left: 10rpx;
  font-size: 26rpx;
  color: #a6a6a6;
  text-decoration: line-through;
}

.container .btn-wrap {
  display: flex;
  font-size: 26rpx;
}

.container .btn-wrap .btn {
  box-sizing: border-box;
  padding: 15rpx 20rpx;
  width: 220rpx;
  text-align: center;
}

.container .btn-wrap .left-btn {
  color: #fff;
  background-color: #666666;
  border-radius: 31rpx 0rpx 0rpx 31rpx;
}

.container .btn-wrap .right-btn {
  color: #fff;
  background-color: #0ccd79;
  border-radius: 31rpx;
}

.container .swiper-wrap swiper {
  height: 690rpx;
}

.container .swiper-wrap .swiper-item image {
  overflow: hidden;
  width: 750rpx;
  height: 690rpx;
}

.container .sale-wrap {
  background-color: #fff;
  margin-bottom: 10rpx;
  padding: 10rpx 30rpx 20rpx;
}

.container .sale-wrap .slogan {
  margin-bottom: 20rpx;
}

.container .sale-wrap .slogan .name-wrap {
  font-size: 36rpx;
  margin-bottom: 15rpx;
}

.container .sale-wrap .slogan .name-wrap .name {
  flex-grow: 1;
  font-weight: bold;
  margin-right: 20rpx;
}

.container .sale-wrap .slogan .name-wrap .shop {
  font-size: 22rpx;
  color: #666666;
}

.container .sale-wrap .slogan .name-wrap .shop image {
  width: 30rpx;
  height: 30rpx;
  display: block;
  margin-right: 10rpx;
}

.container .sale-wrap .slogan .sub-name {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #666;
  margin-bottom: 50rpx;
}

.container .sale-wrap .slogan .sub-name .sub-icon {
  margin: 0 10rpx;
  width: 26rpx;
  height: 26rpx;
}

.container .sale-wrap .price-wrap {
  justify-content: space-between;
  margin-bottom: 10rpx;
}

.container .sale-wrap .price-wrap .price {
  align-items: flex-end;
}

.container .sale-wrap .promise {
  border-top: 1px solid #f2f2f2;
  padding: 35rpx 0rpx 20rpx;
  justify-content: space-between;
}

.container .sale-wrap .promise .left {
  font-size: 26rpx;
  color: #999999;
}

.container .sale-wrap .promise .left .fold {
  margin-right: 20rpx;
  color: #4d4d4d;
}

.container .tab-wrap {
  padding-bottom: 100rpx;
}

.container .tab-wrap .good-detail {
  background: #fff;
  margin: 10rpx 0 0;
  padding: 10rpx;
}

.container .tab-wrap .buy-record {
  padding-bottom: 15rpx;
}

.container .tab-wrap .buy-record .record-item {
  background-color: #fff;
  margin: 10rpx 0;
  padding: 10rpx 15rpx;
}

.container .tab-wrap .buy-record .record-item .user-img {
  width: 100rpx;
  height: 100rpx;
  display: block;
  border-radius: 50%;
  margin-right: 15rpx;
}

.container .tab-wrap .buy-record .record-item .right-info > view {
  padding: 5rpx 0;
}

.container .operation-wrap {
  background-color: #fff;
  box-sizing: border-box;
  justify-content: center;
  position: fixed;
  bottom: 0;
  width: 100%;
  padding: 15rpx 20rpx;
}

.container .operation-wrap .operate-item {
  font-size: 22rpx;
  line-height: 32rpx;
}

.container .operation-wrap .operate-item image {
  width: 27rpx;
  height: 29rpx;
  margin-bottom: 5rpx;
}

.container .operation-wrap .operate-item .serve-btn {
  background-color: transparent;
  color: #333333;
  font-size: 22rpx;
  line-height: 32rpx;
}

.container .detail-wrap {
  padding: 20rpx 30rpx 30rpx;
  position: relative;
}

.container .detail-wrap .good-wrap {
  margin-bottom: 20rpx;
}

.container .detail-wrap .good-wrap .spec-img {
  width: 120rpx;
  height: 120rpx;
  border-radius: 10rpx;
  margin-right: 10rpx;
}

.container .detail-wrap .good-wrap .right-text .name {
  margin-bottom: 20rpx;
}

.container .detail-wrap .spec-wrap .item-wrap .spec-name {
  font-size: 30rpx;
  margin: 20rpx 0;
}

.container .detail-wrap .spec-wrap .item-wrap .spec-list {
  flex-wrap: wrap;
  padding-top: 20rpx;
}

.container .detail-wrap .spec-wrap .item-wrap .spec-list .spec-item {
  padding: 5rpx 15rpx;
  margin: 0 10rpx 20rpx;
  display: flex;
  align-items: center;
}

.container .detail-wrap .buy-num {
  justify-content: space-between;
  font-size: 30rpx;
  margin: 20rpx 0 30rpx;
}

.price-fragment {
  padding: 20rpx 0;
  display: flex;
  align-items: center;
  flex-wrap: wrap;
}

.fragment-item {
  display: flex;
  align-items: center;
  margin-left: 20rpx;
}

.fragment-item image {
  width: 33rpx;
  height: 34rpx;
  margin-right: 5rpx;
}

.spec-item image {
  width: 33rpx;
  height: 34rpx;
  margin-right: 5rpx;
}

.disabled {
  background: #999;
}
