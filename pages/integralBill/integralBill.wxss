/* pages/bill/bill.wxss */
.container .list {
  margin-top: 8rpx;
}

.container .list-item {
  justify-content: space-between;
  padding: 18rpx 40rpx;
}
.container .list-item>.flex{
  justify-content: space-between;
}
.container .list-item .text{
  font-size: 26rpx;
  color: #333;
}
.container .list-item .remark{
  color: #999;
  font-size: 24rpx;
  text-align: right;
  margin: 10rpx 0;
}

.container .list-item .time{
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}
.container .list-item:nth-child(n + 2) {
  margin-top: 15rpx;
}

.container .list-item:nth-child(Even) {
  background: #f6f6f6;
}

.container .list-item .icon {
  width: 25rpx;
  height: 25rpx;
  margin-right: 15rpx;
}

.container .list-item .id {
  font-size: 28rpx;
  color: #333333;
}

.container .list-item .money {
  font-size: 30rpx;
  text-align: right;
}
.success{
  color: #0ccd79;
}
.danger{
  color: #F56C6C;
}
.container .list-item .time {
  font-size: 24rpx;
  color: #999999;
}

.container .list-item .left {
  font-size: 30rpx;
  color: #0ccd79;
}

.container .list-item .right {
  font-size: 28rpx;
  color: #333333;
}