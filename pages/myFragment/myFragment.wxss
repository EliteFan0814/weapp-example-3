/* pages/myFragment/myFragment.wxss */
.container {
  background: #F6F6F6;
}

.container .header {
  position: relative;
}

.container .header .bg-img {
  width: 100%;
  display: block;
}

.container .header .info {
  justify-content: space-around;
  color: #ffffff;
  width: 100%;
  position: absolute;
  bottom: 30rpx;
}

.container .header .info .left {
  width: 50%;
  text-align: center;
}

.container .header .info .left .text {
  font-size: 36rpx;
}

.container .header .info .left .num {
  font-size: 100rpx;
}

.container .header .info .left .remark {
  font-size: 24rpx;
  color: #fff;
}

.container .header .info .right {
  width: 50%;
  padding-left: 30rpx;
  box-sizing: border-box;
}

.container .header .info .right .chunk .chunk-item {
  width: 90rpx;
  height: 43rpx;
  background: rgba(255, 255, 255, 0.3);
  border-radius: 20rpx;
  justify-content: center;
  font-size: 30rpx;
}

.container .header .info .right .chunk .chunk-item .chunk-img {
  width: 29rpx;
  height: 33rpx;
}

.container .header .info .right .chunk .chunk-item .num {
  position: relative;
  z-index: 9;
}

.container .header .info .right .chunk .middle {
  margin: 20rpx;
  font-size: 28rpx;
}

.container .list {
  flex-wrap: wrap;
  padding: 40rpx 30rpx;
}

.container .list-item {
  background: #fff;
  border-radius: 30rpx;
}

.container .list-item:nth-child(even) {
  margin-left: 20rpx;
}

.container .list-item:nth-child(n+3) {
  margin-top: 30rpx;
}

.container .list-item .left {
  width: 235rpx;
  font-size: 36rpx;
  color: #333;
  justify-content: center;
}

.container .list-item .left .img {
  width: 64rpx;
  height: 73rpx;
}

.container .list-item .left .middle {
  margin: 0 20rpx;
}

.container .list-item .left .num {
  font-weight: bold;
}

.container .list-item .right {
  text-align: center;
  border-left: 1px solid #f6f6f6;
  font-size: 24rpx;
  letter-spacing: 4.8rpx;
  width: 100rpx;
  box-sizing: border-box;
  padding: 0 20rpx;
}

.container .list-item .right view {
  color: #0ccd79;
  padding: 28rpx 0;
  box-sizing: border-box;
}

.container .list-item .right view:nth-child(n+2) {
  border-top: 1px solid #f6f6f6;
}
