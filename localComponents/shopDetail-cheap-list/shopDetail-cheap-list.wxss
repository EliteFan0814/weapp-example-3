.base-class-list {
  display: flex;
  padding: 0 30rpx;
}

.base-class-list .omit-1 {
  white-space: nowrap;
  text-overflow: ellipsis;
  -o-text-overflow: ellipsis;
  overflow: hidden;
}

.good-wrap {
  background-color: #ffffff;
  box-shadow: 0rpx 5rpx 45rpx 0rpx rgba(0, 0, 0, 0.06);
  border-radius: 20rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}
.base-class-list .normal-good-item {
  display: flex;
}

.base-class-list .normal-good-item .img-wrap {
  width: 190rpx;
  height: 190rpx;
  display: flex;
}

.base-class-list .normal-good-item .img-wrap .item-img {
  width: 190rpx;
  height: 190rpx;
}

.base-class-list .normal-good-item .name-wrap {
  flex: 1;
  box-sizing: border-box;
  padding-left: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.base-class-list .normal-good-item .name-wrap .omit-2 {
  font-weight: bold;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.base-class-list .normal-good-item .name-wrap .name {
  font-size: 28rpx;
  font-weight: bold;
}

.base-class-list .normal-good-item .name-wrap .sub-name {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #666;
}

.base-class-list .normal-good-item .name-wrap .sub-name .sub-icon {
  margin: 0 10rpx;
  width: 26rpx;
  height: 26rpx;
}

.base-class-list .normal-good-item .name-wrap .price-wrap {
  display: flex;
  align-items: center;
}

.base-class-list .normal-good-item .name-wrap .price-wrap .red {
  font-size: 28rpx;
  letter-spacing: 0.5rpx;
  color: #ff4b4b;
  margin-right: 20rpx;
}

.base-class-list .normal-good-item .name-wrap .price-wrap .grey {
  font-size: 24rpx;
  letter-spacing: 0.5rpx;
  color: #a6a6a6;
  text-decoration: line-through;
}
.good-fragments {
  padding: 20rpx 0;
  border-top: 1rpx solid #eeeeee;
  border-bottom: 1rpx solid #eeeeee;
  font-size: 22rpx;
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  margin-bottom: 20rpx;
}
.good-fragments .fragments-item {
  display: flex;
  align-items: center;
  margin-right: 30rpx;
}
.good-fragments .fragments-item image {
  width: 30rpx;
  height: 33rpx;
}
.no-list {
  text-align: center;
  width: 100%;
}
