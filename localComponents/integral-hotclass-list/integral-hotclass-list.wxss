.base-class-list {
  display: flex;
}

.base-class-list .omit-1 {
  white-space: nowrap;
  text-overflow: ellipsis;
  -o-text-overflow: ellipsis;
  overflow: hidden;
}

.base-class-list .hide-scroll-bar::-webkit-scrollbar {
  display: none;
}

.base-class-list .aside-wrap {
  background-color: #f7f8fa;
  width: 25%;
  flex-shrink: 0;
  display: flex;
  flex-direction: column;
  overflow-y: scroll;
  font-size: 26rpx;
}

.base-class-list .aside-wrap .class-item {
  transition: all 0.1s;
  padding: 18rpx 0 18rpx 20rpx;
  text-align: center;
}

.base-class-list .aside-wrap .active-item {
  font-weight: bold;
  background-color: #fff;
  color: #0ccd79;
}

.base-class-list .content-wrap {
  flex-grow: 1;
  padding: 0 20rpx;
}

.base-class-list .content-wrap .normal-good-item {
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  background-color: #ffffff;
  box-shadow: 0rpx 5rpx 45rpx 0rpx rgba(0, 0, 0, 0.06);
  border-radius: 20rpx;
}

.base-class-list .content-wrap .normal-good-item .img-wrap {
  width: 190rpx;
  height: 190rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.base-class-list .content-wrap .normal-good-item .img-wrap .item-img {
  width: 190rpx;
  height: 190rpx;
}

.base-class-list .content-wrap .normal-good-item .name-wrap {
  flex-grow: 1;
  box-sizing: border-box;
  padding: 10rpx 35rpx;
}

.base-class-list .content-wrap .normal-good-item .name-wrap .omit-1 {
  width: 450rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  -o-text-overflow: ellipsis;
  overflow: hidden;
}

.base-class-list .content-wrap .normal-good-item .name-wrap .omit-2 {
  font-weight: bold;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.base-class-list .content-wrap .normal-good-item .name-wrap .name {
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 15rpx;
}

.base-class-list .content-wrap .normal-good-item .name-wrap .sub-name {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #0ccd79;
  margin-bottom: 10rpx;
}

.base-class-list .content-wrap .normal-good-item .name-wrap .sub-name .sub-icon {
  margin-right: 10rpx;
  width: 26rpx;
  height: 26rpx;
}

.base-class-list .content-wrap .normal-good-item .name-wrap .num {
  font-size: 25rpx;
  letter-spacing: 0rpx;
  color: #999999;
  margin-bottom: 30rpx;
}

.base-class-list .content-wrap .normal-good-item .name-wrap .price-wrap {
  display: flex;
  align-items: center;
}

.base-class-list .content-wrap .normal-good-item .name-wrap .price-wrap .btn-style {
  padding: 8rpx 30rpx;
}
