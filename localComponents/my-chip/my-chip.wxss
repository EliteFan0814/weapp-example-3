.my-chip {
  padding: 10rpx 20rpx 20rpx;
  border-radius: 15rpx;
  background-color: #fff;
}

.my-chip .top {
  display: flex;
  justify-content: space-between;
  padding-bottom: 10rpx;
  border-bottom: 1px solid #f6f6f6;
  margin-bottom: 15rpx;
}

.my-chip .top .title {
  font-size: 30rpx;
  letter-spacing: 0rpx;
  color: #333333;
  font-weight: bold;
}

.my-chip .top .income {
  display: flex;
  align-items: center;
  font-size: 20rpx;
  letter-spacing: 0rpx;
  color: #a3bab0;
}

.my-chip .bottom .good-subtitle {
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.my-chip .bottom .good-subtitle .chunk-wrap {
  margin-right: 10rpx;
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  width: 100%;
}

.my-chip .bottom .good-subtitle .chunk-wrap .chunk-item {
  display: flex;
  align-items: center;
  width: 20%;
  margin-bottom: 5rpx;
}

.my-chip .bottom .good-subtitle .chunk-wrap .chunk-item .chunk-img {
  margin-right: 10rpx;
  display: block;
  width: 30rpx;
  height: 30rpx;
}

.my-chip .bottom .good-subtitle .chunk-wrap .chunk-item .number {
  font-size: 24rpx;
  color: #0ccd79;
}

.my-chip .bottom .good-subtitle .chunk-wrap .link {
  font-size: 20.36rpx;
  color: #ff3f3f;
  text-decoration: underline;
}
